<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
   <!-- 定义扩展名 -->
   <constant name="struts.action.extension" value="action,do,go,,"></constant>
   <!-- 重新加载struts.xml -->
   <constant name="struts.configuration.xml.reload" value="true"></constant>
   <!-- 国际编码：中文 -->
   <constant name="struts.i18n.encoding" value="UTF-8"></constant>
   <!-- 浏览器不缓存（静态页面） 这个常量并不适用于所有浏览器，设置该比不设置要强 -->
   <constant name="struts.serve.static.browserCache" value="false"></constant>
   
   
   
   <!-- 聊天系统包-->
   <package name="chatnext" extends="struts-default">
	   <!-- 字符拦截器，拦截非法字符 -->
	   <interceptors>
	   	<interceptor name="charInterceptor" class="com.shop.interceptor.CharInterceptor"></interceptor>
	   	<interceptor-stack name="my">
	   		<interceptor-ref name="charInterceptor"></interceptor-ref>
	   		<interceptor-ref name="defaultStack"></interceptor-ref>
	   	</interceptor-stack>
	   </interceptors>
   		<action name="char_*" class="com.shop.action.CustomerAction" method="{1}">
   			<interceptor-ref name="my"></interceptor-ref>
   			
   			<result name="toservice">/Customer.jsp</result>
   			<result name="error">/error.jsp</result>
   		</action>
   </package>
</struts>
